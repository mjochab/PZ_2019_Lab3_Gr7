<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AnalystPricesViewController">
    <children>
        <VBox layoutY="10.0" prefHeight="810.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox>
                    <children>
                        <TextField fx:id="searchTF" prefHeight="25.0" prefWidth="300.0" promptText="Nazwa produktu" styleClass="textarea" stylesheets="@../thoth/style.css">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="search" onAction="#searchAnalystPrices" mnemonicParsing="false" prefHeight="26.0" prefWidth="200.0" styleClass="bluebutton" stylesheets="@../thoth/style.css" text="Szukaj">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="change" contentDisplay="RIGHT" layoutX="1068.0" layoutY="10.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="200.0" styleClass="bluebutton" stylesheets="@../thoth/style.css" text="Zmień">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            <TableView fx:id="priceTable" prefHeight="800.0" prefWidth="1280.0">
              <columns>
                <TableColumn fx:id="PRODUCTID" text="ID" />
                <TableColumn fx:id="NAME" prefWidth="800.0" text="Nazwa" />
                  <TableColumn fx:id="PRICE" minWidth="0.0" prefWidth="200.0" text="Cena" />
                  <TableColumn fx:id="DISCOUNT" prefWidth="200.0" text="Zniżka" />
              </columns>
            </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
