<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="800.0" minWidth="1280.0" stylesheets="@../thoth/style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShopShowOrdersController">
    <children>
        <VBox prefHeight="800.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox>
                    <children>
                  <TextField fx:id="searchTF" promptText="Szukaj numeru telefonu">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="SEARCH" mnemonicParsing="false" onAction="#search" styleClass="bluebutton" text="Szukaj">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="SHOWORDER" mnemonicParsing="false" onAction="#inRealizationDetailsAction" styleClass="bluebutton" text="Podgląd zamówienia">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                        <Button fx:id="DELETE" mnemonicParsing="false" onAction="#setAsPickedUp" prefHeight="25.0" prefWidth="200.0" styleClass="bluebutton" text="Zmień status na doręczony">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <TableView fx:id="ordersTable" prefHeight="822.0" prefWidth="1280.0">
                    <columns>
                        <TableColumn fx:id="ID" prefWidth="143.0" text="ID" />
                        <TableColumn fx:id="STATUS" prefWidth="257.0" text="status" />
                        <TableColumn fx:id="DATE" prefWidth="204.0" text="data" />
                        <TableColumn fx:id="FIRST_NAME" prefWidth="248.0" text="imie_klienta" />
                        <TableColumn fx:id="LAST_NAME" prefWidth="242.0" text="nazwisko_klienta" />
                        <TableColumn fx:id="PHONE_NUMBER" minWidth="0.0" prefWidth="185.0" text="telefon" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
