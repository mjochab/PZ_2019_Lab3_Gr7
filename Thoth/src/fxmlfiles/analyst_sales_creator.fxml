<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AnalystSalesCreatorViewController">
   <children>
      <HBox>
         <children>
            <VBox prefHeight="800.0" prefWidth="640.0">
               <children>
                  <HBox prefHeight="21.0" prefWidth="672.0">
                     <children>
                        <TextField fx:id="searchTF" promptText="Nazwa produktu" styleClass="textarea" stylesheets="@../thoth/style.css">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#searchAnalystPrices" styleClass="bluebutton" stylesheets="@../thoth/style.css" text="Szukaj">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button layoutX="179.0" layoutY="20.0" mnemonicParsing="false" onAction="#refreshProductTable" styleClass="bluebutton" stylesheets="@../thoth/style.css" text="Odśwież" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="productsTable" prefHeight="800.0" prefWidth="640.0">
                    <columns>
                      <TableColumn fx:id="PRODUCTID" minWidth="70.0" prefWidth="70.0" text="id_produkt" />
                      <TableColumn fx:id="NAME" prefWidth="390.0" text="nazwa" />
                        <TableColumn fx:id="PRICE" prefWidth="90.0" text="cena" />
                        <TableColumn fx:id="DISCOUNT" prefWidth="90.0" text="zniżka" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox prefHeight="800.0" prefWidth="640.0">
               <children>
                  <HBox prefHeight="46.0" prefWidth="640.0">
                     <children>
                        <TextField fx:id="DISCOUNT_TF" promptText="10%" styleClass="textarea" stylesheets="@../thoth/style.css" HBox.hgrow="NEVER">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="CHANGE_DISCOUNT" mnemonicParsing="false" onAction="#changeDiscount" styleClass="bluebutton" stylesheets="@../thoth/style.css" text="Ustaw">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="discountTable" prefHeight="800.0" prefWidth="640.0">
                     <columns>
                        <TableColumn fx:id="PRODUCTID_CHANGE" minWidth="70.0" prefWidth="70.0" text="id_produkt" />
                        <TableColumn fx:id="NAME_CHANGE" prefWidth="390.0" text="nazwa" />
                        <TableColumn fx:id="PRICE_CHANGE" prefWidth="90.0" text="cena" />
                        <TableColumn fx:id="DISCOUNT_CHANGE" prefWidth="90.0" text="zniżka" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
