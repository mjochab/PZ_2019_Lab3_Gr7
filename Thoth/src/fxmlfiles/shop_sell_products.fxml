<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="800.0" minWidth="1280.0" stylesheets="@../thoth/style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShopSellProductsController">
    <children>
        <HBox prefHeight="800.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefHeight="800.0" prefWidth="640.0">
                    <children>
                        <HBox>
                            <children>
                                <TextField fx:id="serachShop" promptText="Szukaj produktu">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </TextField>
                                <Button fx:id="searchStateShop" mnemonicParsing="false" onAction="#searchStateShop" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #ff9900;" text="Przeszukaj/Odśwież" textAlignment="CENTER">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <opaqueInsets>
                                <Insets bottom="10.0" top="10.0" />
                            </opaqueInsets>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                        <TableView fx:id="PRODUCT_TABLE" prefHeight="800.0" prefWidth="640.0">
                            <columns>
                                <TableColumn fx:id="PRODUCTID" prefWidth="70.0" text="Kod" />
                                <TableColumn fx:id="NAME" prefWidth="390.0" text="nazwa" />
                                <TableColumn fx:id="PRICE" prefWidth="90.0" text="cena" />
                                <TableColumn fx:id="AMOUNT" prefWidth="90.0" text="ilosc" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <VBox prefHeight="800.0" prefWidth="640.0">
                    <children>
                        <HBox>
                            <children>
                                <Label prefHeight="25.0" prefWidth="141.0" styleClass="whitelabel" text="Produkty na paragonie" textFill="#da8618">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Label>
                                <Button mnemonicParsing="false" onAction="#confirm" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #ff9900;" text="Sprzedaj Produkty">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                        <TableView fx:id="RECEIPT_TABLE" minWidth="496.0" prefHeight="800.0" prefWidth="640.0">
                            <columns>
                                <TableColumn fx:id="PRODUCTID_RECEIPT" prefWidth="70.0" text="Kod" />
                                <TableColumn fx:id="NAME_RECEIPT" prefWidth="390.0" text="nazwa" />
                                <TableColumn fx:id="PRICE_RECEIPT" prefWidth="90.0" text="cena" />
                                <TableColumn fx:id="AMOUNT_RECEIPT" prefWidth="90.0" styleClass="editable-column" text="ilosc" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
